#!/bin/bash

# Git 快速提交和推送脚本
# 使用方法: gt "commit message"

if [ -z "$1" ]; then
    echo "错误: 请提供提交信息"
    echo "使用方法: gt \"你的提交信息\""
    exit 1
fi

# 执行 git add --all
echo "正在添加所有更改..."
git add --all

# 执行 git commit
echo "正在提交更改..."
git commit -m "$1"

# 执行 git push
echo "正在推送到远程仓库..."
git push

echo "完成！"

